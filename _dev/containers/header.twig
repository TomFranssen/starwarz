{% macro menulink(label, url) %}

    {% if url == currentUrl %}
        {% set className = 'active' %}
    {% endif %}

    <li class="{{ className }}"><a href="{{ url }}">{{ label }}</a></li>
{% endmacro %}

{% macro menulinkClass(url) %}

    {% if url == currentUrl %}
        {% set className = 'active' %}
    {% endif %}

    {{ className }}
{% endmacro %}

